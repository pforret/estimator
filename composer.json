{
    "name": "pforret/estimator",
    "version": "1.5.4",
    "description": "PHP package to help with statistic estimation (extrapolation) based on historic reference data",
    "keywords": [
        "pforret",
        "estimation",
        "statistics",
        "extrapolation"
    ],
    "homepage": "https://github.com/pforret/estimator",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "peter@forret.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 | ^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.18"
    },
    "autoload": {
        "psr-4": {
            "Pforret\\Estimator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pforret\\Estimator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
